<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BPL_Activity"
    android:orientation="vertical">

    <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/pick_logo_instructions"
    android:textSize="25sp"
    android:textStyle="bold"
    android:layout_gravity="center" />

    <Spinner
        android:id="@+id/football_club_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:entries="@array/football_clubs"
        android:spinnerMode="dropdown" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/english_premier_league"
        android:layout_marginTop="30dp" />


    <Button
        android:id="@+id/random_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:onClick="pickRandom"

        android:text="@string/random_button"
        android:textSize="32sp" />

    <!--android:onClick="pickRandom"-->

    <Button
        android:text="@string/best_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/best"
        android:textSize="32sp"
        android:onClick="showBest"/>

</LinearLayout>
